<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Toolbar superior -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="16dp">

                <!-- Botón atrás -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Volver"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="@color/icon_tint" />

                <!-- Foto de perfil del otro usuario -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivReceiverPhoto"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/btnBack"
                    android:contentDescription="Foto de perfil"
                    android:src="@drawable/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/icon_tint" />

                <!-- Nombre del otro usuario -->
                <TextView
                    android:id="@+id/tvReceiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/ivReceiverPhoto"
                    android:layout_toStartOf="@id/btnMore"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Usuario"
                    android:textColor="@color/icon_tint"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Botón de opciones (opcional) -->
                <ImageView
                    android:id="@+id/btnMore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Más opciones"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:visibility="gone"
                    app:tint="@color/icon_tint" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Mensaje cuando no hay conversación -->
    <TextView
        android:id="@+id/tvNoMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Aún no hay mensajes\nEnvía el primero"
        android:textAlignment="center"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- RecyclerView para los mensajes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutMessageInput"
        android:layout_below="@id/appBarLayout"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="-2dp"
        android:padding="8dp" />

    <!-- Layout inferior para escribir mensajes -->
    <RelativeLayout
        android:id="@+id/layoutMessageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/input_background"
        android:padding="8dp">

        <!-- Campo de texto -->
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btnSend"
            android:background="@drawable/bg_message_input"
            android:hint="Escribe un mensaje..."
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:maxLines="4"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Botón enviar -->
        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Enviar mensaje"
            android:focusable="true"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_send"
            app:tint="@color/send_button" />

    </RelativeLayout>

</RelativeLayout>