<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar superior -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#6F6565">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6F6565">

                <!-- Botón atrás -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Volver"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_revert" />

                <!-- Foto de perfil del otro usuario -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivReceiverPhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/btnBack"
                    android:contentDescription="Foto de perfil"
                    android:src="@drawable/ic_chat_logo"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FFFFFF" />

                <!-- Nombre del otro usuario -->
                <TextView
                    android:id="@+id/tvReceiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/ivReceiverPhoto"
                    android:text="Usuario"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView para los mensajes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutMessageInput"
        android:layout_below="@id/appBarLayout"
        android:padding="8dp" />

    <!-- Layout inferior para escribir mensajes -->
    <RelativeLayout
        android:id="@+id/layoutMessageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5"
        android:padding="8dp">

        <!-- Campo de texto -->
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btnSend"
            android:background="@color/white"
            android:foregroundTint="#222020"
            android:hint="Escribe un mensaje..."
            android:maxLines="4"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Botón enviar -->
        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Enviar mensaje"
            android:focusable="true"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_send"
            app:tint="#1E88E5" />

    </RelativeLayout>

</RelativeLayout>